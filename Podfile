platform :ios, ‘8.0’ # ios系统版本
inhibit_all_warnings! #禁止第三方库显示警告
use_frameworks!#swift框架不支持生成.a文件，所以加上这句让其生成.frameworks

target ‘YMShare’ do
pod 'GPUImage'
pod 'AFNetworking'#网络请求
pod 'MJRefresh' #上下拉刷新
pod 'FMDB'
pod 'SVProgressHUD' #alert提醒
pod 'Masonry' #屏幕适配
pod 'SDWebImage' #加载网络图片
pod 'SSKeychain' #缓存本地账号密码, 自动登录
pod 'IQKeyboardManager' #键盘管理

pod 'UMengUShare/UI'
pod 'UMengUShare/Social/ReducedWeChat' # 集成微信(精简版0.2M)
pod 'UMengUShare/Social/ReducedQQ' # 集成QQ(精简版0.5M)
pod 'UMengUShare/Social/ReducedSina' # 集成微博精简版

end
